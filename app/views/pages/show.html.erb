<%= link_to 'Edit', edit_page_path(@page), class: "btn btn-danger btn-sm pull-right" if is_admin %>

<p>
  <strong>Name:</strong>
  <%= @page.name %>
</p>

<p>
  <strong>Content:</strong>
  <%= @page.content %>
</p>


<% if @page.id == 2 %>
<div class="row">
  <% membership_options.each do |membership_option| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= membership_option.name %></h3>
        <p><%= membership_option.description %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% end %>

<% if @page.id == 3 %>
<div class="row">
  <% classes.each do |classe| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= classe.name %></h3>
        <i><%= classe.date_start %></i>
        <br><br>
        <b><%= classe.instructor_name %></b>
        <br>
        <b>
          <%= classe.day %> :
          <%= classe.time.strftime('%l:%M %p') %>
        </b>
        <p><%= classe.description %></p>

        <%= link_to "Book", new_booking_path(:classe_id => classe), class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>
<% end %>

<% end %>
<% if @page.id == 4 %>
<div class="row">
  <h1>Contact us</h1>
  <%= render 'messages/form', message: Message.new %>
</div>
<% end %>
