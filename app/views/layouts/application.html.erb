<!DOCTYPE html>
<html>
<head>
  <title>WFGroupProject</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% if flash[:notice] %>
  <div class="alert alert-success" style="display: block">
    <a class="close" onclick="$('.alert').hide()">Ã—</a>
    <%= flash[:notice] %>
  </div>
  <% end %>

  <div class="page-container">

    <!-- top navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".sidebar-nav">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">WFGroupProject</a>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row row-offcanvas row-offcanvas-left">

        <!-- sidebar -->
        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
          <ul class="nav">
            <% pages.each do |page| %>
            <li><%= link_to page.name, controller: "pages", action: "show", id: page %></li>
            <% end %>
            <li><%= link_to "Administration", admin_path %></li>
          </ul>
        </div>

        <!-- main area -->
        <div class="col-xs-12 col-sm-9">

          <%= yield %>

          <%= console %>

        </div><!-- /.col-xs-12 main -->
      </div><!--/.row-->
    </div><!--/.container-->
  </div><!--/.page-container-->
</body>
</html>
