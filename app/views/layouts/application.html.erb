<!DOCTYPE html>
<html>
<head>
  <title>WFGroupProject</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% if flash[:notice] %>
  <div class="alert alert-success" style="display: block">
    <a class="close" onclick="$('.alert').hide()">Ã—</a>
    <%= flash[:notice] %>
  </div>
  <% end %>

  <div class="page-container">

    <!-- top navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".sidebar-nav">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "WFGroupProject", root_path, class:"navbar-brand" %>
        </div>


        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li class="dropdown-submenu">
                  <a class="pointer" tabindex="-1">Pages</a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "New", controller: "pages", action: "new" %></li>
                    <li class="divider"></li>
                    <% pages.each do |page| %>
                    <li><%= link_to page.name, controller: "pages", action: "edit", id: page %></li>
                    <% end %>
                  </ul>
                </li>

                <li class="dropdown-submenu">
                  <a class="pointer" tabindex="-1">Membership options</a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "New", controller: "membership_options", action: "new" %></li>
                    <li class="divider"></li>
                    <% membership_options.each do |membership_option| %>
                    <li><%= link_to membership_option.name, controller: "membership_options", action: "edit", id: membership_option %></li>
                    <% end %>
                  </ul>
                </li>

                <li class="dropdown-submenu">
                  <a class="pointer" tabindex="-1">Classes</a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "New", controller: "classes", action: "new" %></li>
                    <li class="divider"></li>
                    <% classes.each do |classe| %>
                    <li><%= link_to classe.name, controller: "classes", action: "edit", id: classe %></li>
                    <% end %>
                  </ul>
                </li>

                <li class="dropdown-submenu">
                  <a class="pointer" tabindex="-1">Images</a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "New", controller: "pages", action: "new" %></li>
                    <li class="divider"></li>
                    <li><a href="#">Show</a><li>
                  </ul>
                </li>

              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container content-wrapper">
      <div class="row row-offcanvas row-offcanvas-left">

        <!-- sidebar -->
        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
          <ul class="nav">
            <% pages.each do |page| %>
            <li><%= link_to page.name, controller: "pages", action: "show", id: page %></li>
            <% end %>
          </ul>
        </div>

        <!-- main area -->
        <div class="col-xs-12 col-sm-9">

          <%= yield %>

          <%= console %>

        </div><!-- /.col-xs-12 main -->
      </div><!--/.row-->
    </div><!--/.container-->
  </div><!--/.page-container-->
</body>
</html>
