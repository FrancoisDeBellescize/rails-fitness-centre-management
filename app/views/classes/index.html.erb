<p id="notice"><%= notice %></p>

<h1>Classes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Day</th>
      <th>Description</th>
      <th>Instructor name</th>
      <th>Date start</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classes.each do |class| %>
      <tr>
        <td><%= class.name %></td>
        <td><%= class.day %></td>
        <td><%= class.description %></td>
        <td><%= class.instructor_name %></td>
        <td><%= class.date_start %></td>
        <td><%= link_to 'Show', class %></td>
        <td><%= link_to 'Edit', edit_class_path(class) %></td>
        <td><%= link_to 'Destroy', class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

