<h1>Classes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Day</th>
      <th>Description</th>
      <th>Instructor name</th>
      <th>Date start</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classes.each do |classe| %>
      <tr>
        <td><%= classe.name %></td>
        <td><%= classe.day %></td>
        <td><%= classe.description %></td>
        <td><%= classe.instructor_name %></td>
        <td><%= classe.date_start %></td>
        <td><%= link_to 'Show', classe %></td>
        <td><%= link_to 'Edit', edit_class_path(classe) %></td>
        <td><%= link_to 'Destroy', classe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Class', new_class_path %>
