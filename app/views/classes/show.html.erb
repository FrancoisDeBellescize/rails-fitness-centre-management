<%= link_to 'Edit', edit_class_path(@classe), class:"pull-right btn btn-default" %>

<h1><%= @classe.name %> <small>Class</small></h1>
<hr>
<h3>Informations :</h3>
<hr>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @classe.name %>
</p>

<p>
  <strong>Day:</strong>
  <%= @classe.day %>
</p>

<p>
  <strong>Description:</strong>
  <%= @classe.description %>
</p>

<p>
  <strong>Instructor name:</strong>
  <%= @classe.instructor_name %>
</p>

<p>
  <strong>Date start:</strong>
  <%= @classe.date_start %>
</p>

<h3>Bookings :</h3>
<hr>
<div class="container-fluid">
  <div class="row">
    <% @classe.bookings.each do |b| %>
    <div class="well col-md-4">
      <%= link_to "Edit", edit_booking_path(b), class: "btn btn-sm btn-default pull-right" %>
      <b>Name :</b> <%= b.name %><br>
      <b>Phone :</b> <%= b.phone %><br>
      <b>Email :</b> <%= b.email %><br>
      <b>Membership id :</b> <%= b.membership_id %><br>
      <b>Number of classes :</b> <%= b.number %>
    </div>
    <% end %>
  </div>
</div>
