<%= form_for(@booking) do |f| %>
<% if @booking.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this class from being saved:</h2>

  <ul>
    <% @booking.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :phone %>
  <%= f.text_field :phone %>
</div>

<div class="field">
  <%= f.label :email %>
  <%= f.email_field :email %>
</div>

<div class="field">
  <%= f.label :number %>
  <%= select(:booking, :number, [1, 6]) %>
</div>

<div class="field">
  <%= f.label :membership_id %>
  <%= f.text_field :membership_id %>
</div>

<% if @classe %>
<%= hidden_field(:booking, :classe_id, :value => params[:classe_id]) %>
<% else %>
<div class="field">
  <%= f.collection_select(:classe, Classe.all, :id, :name) if @classes %>
</div>
<% end %>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
